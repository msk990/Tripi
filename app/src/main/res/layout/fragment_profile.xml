<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:layout_marginTop="80dp"
    android:padding="16dp"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/profile_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_circle_bg"
            android:contentDescription="Profile Image" />

        <!-- Profile Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobbit of the Shire"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="40dp" />

        <!-- Badges Title -->
        <TextView
            android:id="@+id/badges_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Badges"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <!-- Badges RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/badges_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <!-- Adventures Title -->
        <TextView
            android:id="@+id/adventures_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adventures"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <!-- Adventures RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adventures_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:scrollbars="none" />

    </LinearLayout>
</ScrollView>
